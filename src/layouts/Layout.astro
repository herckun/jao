---
import "@fontsource/nunito/200.css";
import "@fontsource/nunito/300.css";
import "@fontsource/nunito/400.css";
import "@fontsource/nunito/500.css";
import "@fontsource/nunito/600.css";
import "@fontsource/nunito/700.css";
import "@fontsource/nunito/800.css";
import "@fontsource/nunito/900.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="just an overview." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:image"
      content="//wsrv.nl/?url=image.thum.io/get/https://jao-astroport.pages.dev/"
    />
    <meta
      name="twitter:image"
      content="//wsrv.nl/?url=image.thum.io/get/https://jao-astroport.pages.dev/"
    />
    <meta property="og:image:width" content="400" />
    <meta property="og:image:height" content="300" />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-b from-zinc-950 via-50% via-zinc-950/50 to-zinc-800 relative"
  >
    <div class="w-screen h-full absolute z-10 pattern opacity-10">
      <div
        class="w-full h-full absolute bg-gradient-to-b from-zinc-900 via-40% via-zinc-900/70"
      >
      </div>
    </div>

    <div
      data-theme="froggycandle"
      class="bg-transparent min-h-screen z-30 relative flex flex-col place-content-center place-items-center gap-2 py-4"
    >
      <div class="navbar w-fit mx-auto flex flex-col gap-1">
        <a
          class="btn btn-ghost text-white bg-white/10 font-bold text-xl rounded-full"
          >jao.</a
        >
      </div>
      <slot />
      <footer
        class="footer footer-center p-10 bg-transparent rounded flex flex-col gap-1"
      >
        <aside>
          <p class="text-neutral-content">
            Price data provided by
            <a
              href="https://www.coingecko.com"
              target="_blank"
              class="text-affair-400 font-semibold p-2 bg-affair-950 rounded-full text-xs"
              >CoinGecko</a
            >
          </p>
        </aside>
        <p class="text-neutral-content text-xs mt-2 font-bold">
          powered by {Astro.generator}
        </p>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  * {
    font-family: "Nunito", sans-serif;
  }
  .pattern {
    background-color: #27272a;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.24'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>
